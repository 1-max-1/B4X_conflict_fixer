<Window x:Class="B4X_conflict_fixer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:B4X_conflict_fixer"
		mc:Ignorable="d"
		Title="B4X conflict fixer" Height="223" Width="800">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Label Content="B4X Project file location:" HorizontalAlignment="Left" Margin="10,23,0,0" Padding="0,0,0,0" VerticalAlignment="Bottom" FontSize="22" Width="244"/>
		<TextBox x:Name="txtProjectFileLocation" TextWrapping="NoWrap" VerticalContentAlignment="Center" Margin="10,5,5,0" Height="33.28" VerticalAlignment="Top" Grid.Row="1"/>
		<Button x:Name="btnBrowse" Content="Browse" Margin="5,5,10,10" Grid.Row="1" Grid.Column="1" Padding="5,5,5,5" VerticalAlignment="Top" FontSize="16" Click="BtnBrowse_Click" />
		<Button x:Name="btnFixConflict" Content="Fix conflict" Padding="5,5,5,5" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="22" Click="BtnFixConflict_Click" Height="42"/>
	</Grid>
</Window>
